{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "src/shared/*"
      ]
    },
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "electron-vite/node"
    ],
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "electron.vite.config.ts",
    "src/main",
    "src/preload",
    "src/shared"
  ]
}
